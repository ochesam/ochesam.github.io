html {
    box-sizing: border-box;
}
*, *:before, *:after {
    box-sizing: inherit;
}
body {
    font-family: 'Open Sans', sans-serif;
}
.wrapper{
    width: 80%;
    margin:0 auto;
    
}
header{
    display: flex;
    flex-flow:row nowrap;
    justify-content: space-between;
}
.rightheader{
    flex-basis: 60%;
    padding-left: 0.5rem;
    margin-top: 3.75rem;
}
.rightheader h1{
    font-size: 3rem;
    color: #DA0090;
    margin: 0rem;
}
.rightheader p{
    margin-top: -0.2rem;
}
.leftheader{
    flex-basis: 40%;
    text-align: right;
    padding-right: 0.5rem;
}
h1, h2, h3, h4, h5, h6 {
    font-family: 'Kavivanar', cursive;
    font-weight: normal;
}
h2 {
    font-size: 2rem;
    color: #A51F10;
    margin: 0;
}
a {
    color: #DA0090;
    text-decoration: none;
    border:1px #DA0090;
    
}
a:hover {
    text-decoration: underline;
}
.posted {
    font-size: 0.8rem;
    color: #89A611;
}
section{
    border-bottom: 1px solid #DA0090;
}
footer {
    border-top:1px solid #a61f11;
    text-align: center;
    font-size: 0.8rem;
}
footer li{
    display: inline-block;
    font-size: 0.8rem;
}
nav{
    border-top: 1px solid#a61f11;
    border-bottom:1px solid #DA0090;
}
nav ul{
    margin: 0;
    padding: 0;
    list-style-type: none;
    text-align: center;
}
nav li{
    display:inline-block;

}
nav a{
    text-decoration: none;
    color: #73352E;
    display: block;
    padding: 0.5rem 1rem;
}
 nav a:hover{
    background-color: black;
    color: #84de37;
    text-decoration: none;

 }

 article{
    margin: 2rem 0;
    
 }
 article img{
    border-radius: 1rem;
    float: left;
    margin: 0 1rem 1rem 0;
 }
 article:after{
    content: "";
    display: table;
    clear: both;
 }
 

 



 
 